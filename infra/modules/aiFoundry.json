      "type": "string",
      "metadata": {
        "description": "Resource ID of Azure OpenAI Service"
      },
      "value": "[resourceId('Microsoft.CognitiveServices/accounts', parameters('openAIName'))]"
    },
    "openAIName": {
      "type": "string",
      "metadata": {
        "description": "Name of Azure OpenAI Service"
      },
      "value": "[parameters('openAIName')]"
    },
    "openAIEndpoint": {
      "type": "string",
      "metadata": {
